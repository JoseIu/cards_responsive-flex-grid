---
interface Props {
  image: string;
  title: string;
  description: string;
}

const { image, title, description } = Astro.props;
---

<article class="card">
  <img class="card__image" src={image} alt={title} />

  <div class="card__content">
    <h2 class="card__title">{title}</h2>
    <p class="card__description">{description}</p>

    <a href="#" class="card__btn">Learn More</a>
  </div>
</article>
<style>
  .card {
    flex-grow: 1;
    flex-basis: 20rem;
    background-color: var(--color-card);
    border-radius: 0.5rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    .card__image {
      aspect-ratio: 16/9;
    }
    .card__content {
      padding: 1em;
      display: flex;
      flex-direction: column;
      row-gap: 1em;
    }
    .card__btn {
      padding: 0.5em;
      width: 100%;
      border-radius: 0.3rem;
      text-align: center;
      background-color: var(--color-accent);
      color: var(--color-primary-text);
    }
  }
</style>
