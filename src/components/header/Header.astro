---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="header">
  <div class="header__conteiner wrapper">
    <h1 class="header__title">{title}</h1>

    <nav class="header__nav">
      <ul class="header__ul">
        <li class="header__li">
          <a class="header__link" href="/">Flex</a>
        </li>
        <li class="header__li">
          <a class="header__link" href="/grid-fill">Grid-fill</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    background-color: var(--color-primary);
    color: var(--color-primary-text);
    margin-bottom: 1rem;

    .header__conteiner {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem;
    }
    .header__ul {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
  }
</style>
